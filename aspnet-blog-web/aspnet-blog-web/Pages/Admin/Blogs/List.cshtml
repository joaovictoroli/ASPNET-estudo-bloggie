@page
@model aspnet_blog_web.Pages.Admin.Blogs.ListModel
@{
}


<div class="bgalert-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Blog Posts</h1>
    </div>
</div>

@{
    var messageDescription = (string)ViewData["MessageDescription"];
}

@if (!string.IsNullOrWhiteSpace(messageDescription))
{
    <div class="container mb-5">
        <div class="alert alert-success alert-dismissible fade show mb-5" role="alert">
            @Html.Raw(messageDescription)

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

}

@if (Model.ListPosts != null && Model.ListPosts.Any())

{
<div class="Container">
    <table class="table">
        <thread>
            <tr>
                <td>Id</td>
                <td>Heading</td>
                <td></td>
            </tr>
        </thread>
        <tbody>
            @foreach (var blogPost in Model.ListPosts)
            {
                <tr>
                    <td>@blogPost.Id</td>
                    <td>@blogPost.Heading</td>
                    <td><a href="/admin/blogs/edit/@blogPost.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

} else {
    <div class="container">
        <p>No blog posts were found!</p>
    </div>
}