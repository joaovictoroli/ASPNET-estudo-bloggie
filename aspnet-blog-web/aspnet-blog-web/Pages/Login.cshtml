@page
@model aspnet_blog_web.Pages.LoginModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <partial name="_Notification">

                <h1 class="mb-3 mt-5 h3">Login</h1>

                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">Username:</label>
                        <input type="text" class="form-control" asp-for="@Model.LoginViewModel.Username" required />
                        <span class="text-danger" asp-validation-for="LoginViewModel.Username"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password:</label>
                        <input type="password" class="form-control" asp-for="@Model.LoginViewModel.Password" required minlenght="6" />
                        <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>
                    </div>

                    <div class="mb-3">
                        <button type="Submit" class="btn bg-dark text-light">Login</button>
                    </div>
                </form>
        </div>
    </div>
</div>
