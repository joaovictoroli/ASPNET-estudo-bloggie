@page
@model aspnet_blog_web.Pages.LoginModel
@{
}

<div class="container mx-auto">
<div class="row justify-content-center">
    <div class="col-12 col-lg-6">

        <partial name="_Notification">

            <h1 class="mb-3 mt-5 h3">Login</h1>

            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Username:</label>
                        <input type="text" class="form-control" asp-for="@Model.LoginViewModel.Username" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password:</label>
                    <input type="password" class="form-control" asp-for="@Model.LoginViewModel.Password" />
                </div>

                <div class="mb-3">
                    <button type="Submit" class="btn bg-dark text-light">Login</button>
                </div>
            </form>
    </div>
</div>
</div>
